{
  "name": "cachescribe",
  "version": "2.0.0",
  "description": "a simple cache that can persist in the file system across different runs of your program.",
  "author": "saud-alnasser",
  "license": "Apache-2.0",
  "keywords": [
    "cache",
    "memory",
    "file"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saud-alnasser/cachescribe.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint . --report-unused-disable-directives",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf -g dist node_modules",
    "check": "pnpm lint && pnpm typecheck && pnpm test && pnpm build"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.1.1",
    "rimraf": "5.0.5",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "vitest": "1.0.4"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "slash": "^5.1.0",
    "superjson": "^2.2.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": "^20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.1"
}
